<html>
  <head>
    <title>
      ${data.pageTitle}
    </title>

    <link rel="stylesheet" href="/public/css/style.css">
  </head>

  <body>
    <main class="wrapper center">
      <h1>Add a new book</h1>

      <form action="/book${data.book.id ? '?_method=PUT': ''}" method="post" enctype="multipart/form-data" accept="image/jpg">
        <if (data.book.id)>
          <input type="hidden" id="id" name="id" value="${data.book.id}">
        </if>

        <div>
          <label for="title">* Title</label>
          <input type="text" id="title" name="title" value="${data.book.title || ''}" autofocus required>
        </div>

        <div>
          <label for="price">* Price</label>
          <input type="number" id="price" name="price" step=".01" value="${data.book.price || ''}" required>
        </div>

        <if (data.book.image)>
          <input type="hidden" id="image" name="image" value="${data.book.image}">
          <img width="80" src="/public/images/books/${data.book.image}" alt="Cover">
        </if>

        <div>
          <label for="cover">Cover</label>
          <input type="file" id="cover" name="cover">
        </div>

        <div>
          <label for="description">Description</label>
          <textarea id="description" name="description" cols="20" rows="5">${data.book.description}</textarea>
        </div>

        <p class="text-small">* Required fields</p>

        <input class="button mr-1 uppercase" type="submit" value="Save">

        <a href="/book" class="button uppercase">
          Cancel
        </a>
      </form>

    </main>
  </body>
</html>
