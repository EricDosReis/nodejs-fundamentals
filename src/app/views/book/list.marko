<html>
  <head>
    <title>See our books</title>

    <link rel="stylesheet" href="/public/css/style.css">
  </head>

  <body>
    <main class="wrapper center">
      <h1>Books</h1>

      <table id="books">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <tr id="book-${book.id}" for(book in data.books)>
            <td>${book.title}</td>
            <td>${book.price}</td>
            <td>
              <button type="button" class="button m-0 mr-1 uppercase" data-ref="${book.id}" data-action="edit">
                Edit
              </button>

              <button type="button" class="button m-0 uppercase" data-ref="${book.id}" data-action="remove">
                Remove
              </button>
            </td>
          </tr>
        </tbody>
      </table>
    </main>

    <script src="/public/js/books-controller.js"></script>
  </body>
</html>